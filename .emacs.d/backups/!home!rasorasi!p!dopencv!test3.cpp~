#include <opencv2/core/core.hpp>
#include <opencv2/imgproc/imgproc.hpp>
#include <opencv2/highgui/highgui.hpp>
#include <stdio.h>

int main(int argc, char *argv[])
{
	cv::VideoCapture cap(1);
	cap.set(CV_CAP_PROP_FRAME_WIDTH, 320);
	cap.set(CV_CAP_PROP_FRAME_HEIGHT, 240);
	if(!cap.isOpened()) 
	{
		printf("カメラが検出できませんでした");
		return -1;
	}
	cv::Mat input_img;
	cv::Mat hsv_skin_img= cv::Mat(cv::Size(320,240),CV_8UC3);
	cv::Mat smooth_img;
	cv::Mat hsv_img;
	
	cv::namedWindow("input_img", CV_WINDOW_AUTOSIZE);
	cv::namedWindow("hsv_skin_img", CV_WINDOW_AUTOSIZE);

	while(1)
	{
		hsv_skin_img = cv::Scalar(0,0,0);
		cap >> input_img;
		cv::medianBlur(input_img,smooth_img,7);
		cv::cvtColor(smooth_img,hsv_img,CV_BGR2HSV);	
		for(int y=0; y<240;y++)
		{
			for(int x=0; x<320; x++)
			{
				int a = hsv_img.step*y+(x*3);
				if(hsv_img.data[a] >=0 && hsv_img.data[a] <=30 &&hsv_img.data[a+1] >=50 && hsv_img.data[a+2] >= 50 ) 
				{
					hsv_skin_img.data[a] = 255;
				}
			}
		}
		cv::imshow("input_img",input_img);
		cv::imshow("hsv_skin_img",hsv_skin_img);	
		if(cv::waitKey(33) >=0)
		{
			break;	
		}
	}
}
