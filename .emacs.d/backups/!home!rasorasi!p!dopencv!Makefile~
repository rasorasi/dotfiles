TARGET = main  # コンパイルしたいプログラム名
OBJS = main.cpp # プログラムのソースコードの拡張子を.oにしたやつ

CXX = g++      # 好きなコンパイラ
CXXFLAGS = -Wall -O2 # この辺は適当

# OpenCV のライブラリを指定
OPENCVINCl = `pkg-config --cflags opencv`
OPENCVLIB = `pkg-config --libs opencv`

$(TARGET):$(OBJS)
	$(CXX) -o $@ $(OBJS) $(OPENCVLIB)

.cpp.o:
	$(CXX) -c -o $@ $< $(OBJINCS)


#main: main.cpp
# 	g++ -o ./main ./main.cpp -I/usr/local/include/opencv2 -I/usr/local/include/opencv -L/usr/local/lib -lopencv_highgui -lopencv_core



