#!/usr/bin/env python
# -*- coding: utf-8 -*-

import pylab as pl
import numpy as np
from mpl_toolkits.mplot3d import Axes3D

F = 100
RATIO = 0.5

a = 1
ii = 0
nu = 0
num = []

log_file = []

for line in open('log.txt', 'r'):
	log_file.append(line)


lenge = len(log_file)
print lenge

if(lenge > 20):
	lenge = 20;

log = [[] for i in range(lenge)]

for line in log_file:
	for c in line:
		if c.isdigit():
			num.append(c)
		if c == ',' or c == ')':
			for i in reversed(num):
				nu += int(i) * a
				a *= 10
			
			log[ii].append(nu)
			a = 1
			nu = 0
			num = []
			
			if c == ')':
				break
				
	ii += 1
	if(ii >= lenge):
		break
	
print log

for l in log:
	l[0] = l[0]*l[2]*RATIO/F
	l[1] = l[1]*l[2]*RATIO/F


X = [i[0] for i in log  ]
Z = [i[1] for i in log  ]
Y = [i[2] for i in log  ]

print X
print Y
print Z




fig = pl.figure()
ax = Axes3D(fig)
ax.scatter3D(np.ravel(X), np.ravel(Y), np.ravel(Z), s = 10)

ax.set_xlabel("X-axis")
ax.set_ylabel("Z-axis")
ax.set_zlabel("Y-axis")


ax.set_xlim(0, 320)
ax.set_ylim(0, 2000)
ax.set_zlim(240,0 )

ax.plot(X, Y, Z ,"o")



pl.show()
	
			
		
			
		
		
